{% extends 'Layout/header.html.twig' %}

{% block title %}Mot de pass oublié{% endblock %}

{% block main %}
    <section class="container mt-5 mb-5">
        <form method="post" class="mx-auto col-md-5">

            <h1 class="h3 mb-3 font-weight-normal">Modifier vôtre mot de passe</h1>
            <label for="inputPassword" class="sr-only">Mot de passe</label>
            <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Mot de passe" required>
            <input type="password" name="password2" id="inputPassword2" class="form-control mt-2" placeholder="Verification mot de passe" required>
            <input type="hidden" name="token" value="{{ token }}">

            <button class="btn btn-dark mt-3" type="submit">Enregistrer</button>
        </form>
    </section>
{% endblock %}
